<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            >

            <ImageView
                android:id="@+id/homImgBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/homImgEgg"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="40dp"
                    />

                <ImageView
                    android:id="@+id/homImgTalk"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_above="@+id/homImgEgg"
                    android:layout_alignStart="@+id/homImgEgg"
                    android:layout_alignLeft="@+id/homImgEgg"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="-58dp"
                    android:background="@drawable/speach"
                    />

                <ImageButton
                    android:id="@+id/saveImgBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/saveicon" />

                <ImageView
                    android:id="@+id/homImgUtil"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/homImgEgg"
                    android:layout_alignStart="@+id/homImgEgg"
                    android:layout_alignLeft="@+id/homImgEgg"
                    android:layout_marginStart="62dp"
                    android:layout_marginLeft="62dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="#000000">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름 : "
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포만감"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기분"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="체력"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/homTvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        />

                    <ProgressBar
                        android:id="@+id/hugProBar"
                        android:layout_marginTop="3dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminateOnly="false"
                        android:max="100"
                        android:progress="50"
                        />
                    <ProgressBar
                        android:id="@+id/TieProBar"
                        android:layout_marginTop="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminateOnly="false"
                        android:max="100"
                        android:progress="50"
                        />
                    <ProgressBar
                        android:id="@+id/HpProBar"
                        android:layout_marginTop="3dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminateOnly="false"
                        android:max="100"
                        android:progress="50"
                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:stretchColumns="*"
            >
            <TableRow >
                <Button
                    android:id="@+id/btnFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="밥주기"
                    />
                <Button
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="놀아주기"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/btnSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="잠자기"
                    />
                <Button
                    android:id="@+id/btnClean"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="씻기기"
                    />
            </TableRow>

        </TableLayout>



    </LinearLayout>
</LinearLayout>